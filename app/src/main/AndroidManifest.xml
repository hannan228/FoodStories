<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jav.app.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodStories">
        <activity android:name=".ContactUs"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".Activities.AddPost" />
        <activity android:name=".Activities.PostListActivity" />
        <activity android:name=".Activities.PostListActivityUser" />
        <activity android:name=".Activities.PostRow" />
        <activity android:name=".RegisterUser"></activity>
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>